# Toolshed Environment Configuration
# Copy this file to .env and customize values for your deployment

# Database Configuration
# For Docker Compose (production): Use the internal database service
DATABASE_URL=postgresql://toolshed:toolshed@db:5432/toolshed

# For local development with Docker database:
# DATABASE_URL=postgresql://toolshed:toolshed@localhost:5433/toolshed

# For external database (production):
# DATABASE_URL=postgresql://username:password@your-db-host:5432/toolshed

# Session Security
# IMPORTANT: Change this in production to a secure random string
SESSION_SECRET=change-me-in-production-auto-generated-secret

# Application Configuration
NODE_ENV=production
PORT=3000

# Optional: Runtime environment detection
# RUNTIME_ENV=docker

# Optional: For development
# NODE_ENV=development

